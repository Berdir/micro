{#
/**
 * @file
 * Default theme implementation to list micro types available for adding micro.
 *
 * This list is displayed on the Add micro admin page.
 *
 * Available variables:
 * - types: A list of micro types, each with the following properties:
 *   - add_link: Link to create a piece of micro of this type.
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <dl class="micro-type-list">
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_micro = path('micro.type_add') %}
    {% trans %}
      You have not created any micro types yet. Go to the <a href="{{ create_micro }}">micro type creation page</a> to add a new micro type.
    {% endtrans %}
  </p>
{% endif %}
